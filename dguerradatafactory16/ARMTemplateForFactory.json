				"[concat(variables('factoryId'), '/datasets/archivo_capa_bronce_ADLS')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/archivo_capa_bronce_ADLS')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "conector_ADLS_DataFactory",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"archivo_capa_bronce": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().archivo_capa_bronce",
							"type": "Expression"
						},
						"folderPath": "proyectofinal/capa_bronce",
						"fileSystem": "dguerrap"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/conector_ADLS_DataFactory')]"
