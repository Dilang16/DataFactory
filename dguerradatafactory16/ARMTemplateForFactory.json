						"userProperties": [],
						"typeProperties": {
							"notebookPath": "/Users/dilanguerra_16@hotmail.com/ingesta_capa_bronce_a_plata"
						},
						"linkedServiceName": {
							"referenceName": "conector_AzureDatabricks_Datafactory",
