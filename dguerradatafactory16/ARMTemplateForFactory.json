			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Ingesta de datos desde la capa plata hacia la capa oro",
				"activities": [
					{
						"name": "Notebook1",
